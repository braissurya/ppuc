		<field:input field="dept_nm" label="Dept Nm" id="c_com_melawai_ppuc_model_departmen_dept_nm" />
	</form:update>
	
	<spring:message arguments="Subdivisi KD" code="field_choice" var="choice_subdivkd" htmlEscape="false" />
	<spring:url value="/" var="path" />
	<script type="text/javascript">
		dojo.ready(function() {
					
			autoPopulateSelect(
					"${path}",
					"subdivisi2",
					"_divisi_kd_id",
					true,
					"${choice_deptkd}",
					"${departmen.divisi_kd}.${departmen.subdiv_kd}",
					"_subdiv_kd_id");
		});
	</script>
</div>
